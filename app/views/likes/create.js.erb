if(document.querySelector('#thought-<%= @thought.id %> #like-options')){
  $('#thought-<%= @thought.id %> #like-options').tooltip('hide');
  document.querySelector('#thought-<%= @thought.id %> #like-options')
    .parentElement.removeChild(document.querySelector('#thought-<%= @thought.id %> #like-options'));
}

document.querySelector('#thought-<%= @thought.id %> .thought-options')
  .insertAdjacentHTML('afterbegin',"<%= j render 'likes/unlike_button', thought: @thought %>");
$('#thought-<%= @thought.id %> #unlike-options').tooltip('show');