if(document.querySelector('#thought-<%= @thought.id %> #unlike-options')){
  $('#thought-<%= @thought.id %> #unlike-options').tooltip('hide');
  document.querySelector('#thought-<%= @thought.id %> #unlike-options')
    .parentElement.removeChild(document.querySelector('#thought-<%= @thought.id %> #unlike-options'));
}

document.querySelector('#thought-<%= @thought.id %> .like-options')
  .insertAdjacentHTML('afterbegin',"<%= j render 'likes/like_button', thought: @thought %>");
$('#thought-<%= @thought.id %> #like-options').tooltip('show');

if(document.querySelector('#thought-<%= @thought.id %> #like-number')){
  document.querySelector('#thought-<%= @thought.id %> #like-number').innerText = parseInt(document.querySelector('#thought-<%= @thought.id %> #like-number').innerText) - 1
}