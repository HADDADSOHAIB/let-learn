<li class="list-group-item p-1">
  <div class="media">
    <% if comment.user.photo.attached? %>
      <%= link_to(image_tag(comment.user.photo, height: 50, width: 50), user_path(comment.user)) %>
    <% else %>
      <%= link_to(image_tag("default-image.jpg", height: 50, width: 50), user_path(comment.user)) %>
    <% end %>
    <div class="media-body ml-1">
      <div class="d-flex justify-content-between">
        <small class='mb-0'><%= link_to comment.user.fullname, user_path(comment.user), class: "black-color" %></small>
        <small class="opacity-half"><%=  time_ago_in_words(comment.updated_at) %></small>
      </div>
      <small>
        <%= comment.text %>
      </small>
    </div>
  </div>
</li>