<div class="modal-header">
  <h5 class="modal-title" id="exampleModalScrollableTitle"><%= user.fullname %> followers are:</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body followers-modal" >
  <% if user.followers.size.zero? %>
    <p>Nobody is following yet</p>
  <% else %>
    <% user.followers.each do |u| %>
      <%= render 'users/user', user: u, show: false %>
    <% end %>
  <% end %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>