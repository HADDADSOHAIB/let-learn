<div class="modal-header">
  <h5 class="modal-title" id="exampleModalScrollableTitle"><%= user.fullname %> is following</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body followings-modal" >
  <% if user.followeds.size.zero? %>
    <p>You don't follow anyone yet</p>
  <% else %>
    <% user.followeds.each do |u| %>
      <%= render 'users/user', user: u,  show: false %>
    <% end %>
  <% end %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>