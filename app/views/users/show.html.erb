<div class="row">
  <div class="col-12 col-md-9 pr-0">
    <div class="cover-image">
      <%= image_tag "default-cover.jpg" %>
    </div>
    <%= render 'home/tab' %>
    
    <div class="card m-4">
      <div class="card-body">
        <p class="card-title">THOUGHTS ABOUT SOMETHING</p>
        <form>
          <div class="form-group">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="2"></textarea>
          </div>
        </form>
      </div>
    </div>

    <div class="card m-4">
      <div class="card-body">
        <h5 class="card-title">New thoughts</h5>
