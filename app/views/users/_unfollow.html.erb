<%= form_with(url: following_path(1), method: 'delete', id: "unfollow") do |f| %>
  <%= hidden_field(:follow, :followed_id, value: user.id) %>
  <%= hidden_field(:follow, :follower_id, value: current_user.id) %>
  <div class="actions">
    <%= f.button '<i class="fas fa-times"></i>'.html_safe, class: "btn btn-outline-dark user-options mr-2 p-2 opacity-half" %>
  </div>
<% end %>