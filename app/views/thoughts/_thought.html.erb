<div class="d-flex my-4 mx-2" id="thought-<%= thought.id %>">
  <% if thought.author.photo.attached? %>
    <%= link_to(image_tag(thought.author.photo, height: 80, width: 80), user_path(thought.author)) %>
  <% else %>
    <%= link_to(image_tag("default-image.jpg", height: 80, width: 80), user_path(thought.author)) %>
  <% end %>
  <div class="ml-2">
    <p class='mb-0'><%= link_to thought.author.fullname, user_path(thought.author), class: "black-color" %></p>
    <small class="mb-0"><%= thought.text %></small>
    <div class="thought-options">
      <% if like?(thought, current_user) %>
        <%= link_to "<i class='fas fa-heart'></i>".html_safe, unlike_path(thought),  {:remote => true, method: :post, class: 'opacity-half', id: 'unlike-options'}  %>
      <% else %>
        <%= link_to "<i class='far fa-heart'></i>".html_safe, like_path(thought),  {:remote => true, method: :post, class: 'opacity-half', id: 'like-options'}  %>
      <% end %>
      <% if thought.author == current_user %>
        <%= link_to "<i class='far fa-edit'></i>".html_safe, edit_thought_path(thought),  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window', class: 'opacity-half'}  %>
        <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, thought_path(thought), {:remote => true, class: 'opacity-half', method: :delete, data: { confirm: 'Are you sure about deleting the thought?' }} %>
      <% end %>
    </div>
  </div>
</div>
