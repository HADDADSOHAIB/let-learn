<div class="d-flex my-4 mx-2">
  <% if thought.author.photo.attached? %>
    <%= image_tag thought.author.photo, height: 80, width: 80 %>
  <% else %>
    <%= image_tag "default-image.jpg", height: 80, width: 80 %>
  <% end %>
  <div class="ml-2">
    <p><%= thought.author.fullname %></p>
    <p class="mb-0"><%= thought.text %></p>
  </div>
</div>